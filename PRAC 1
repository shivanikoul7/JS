    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Area</title>
</head>
<body>
    <h2>Area od circle</h2>
    Enter the radius of circle
    <input type="text" id="radius">
    <input type="button" value="calculate" onclick="CalculateCircleArea()"/>

    <h2>Area of square</h2>
    Enter the radius of square
    <input type="text" id="sqlength">
    <input type="button" value="calculate" onclick="CalculateSquareArea()"/>

    <h2>Area of rectangle </h2>
    Enter the length of rectangle
    <input type="text" id="length" />

    Enter the width of rectangle
    <input type="text" id="width" />
    <input type="button" value="calculate" onclick="CalculaterectArea()"/>
    
    <h2>Area of Triangle</h2>
    Height of Triangle
    <input type="text" id="height"/>

    Base of Triangle
    <input type="text" id="base"/>
    <input type="button" value="calculate" onclick="CalculatetriArea()"/>

    <script>
        function CalculateCircleArea(){
            var r=document.getElementById("radius").value;
            document.write("Area of circle"+(Math.PI*r*r));
        }
        function CalculateSquareArea(){
            var sq=document.getElementById("sqlength").value;
            document.write("Area of square"+(sq*sq));
        }
        function CalculaterectArea(){
            var l=document.getElementById("length").value;
            var w=document.getElementById("width").value;
            document.write("Area of rectangle"+(l*w));
        }
        function CalculatetriArea(){
            var h=document.getElementById("height").value;
            var b=document.getElementById("base").value;
            document.write("Area of triangle"+(1/2*h*b));
        }

    </script>
</body>
</html>
